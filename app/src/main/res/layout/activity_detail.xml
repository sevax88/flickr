<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    >

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="7"
        android:padding="5dp"
        >
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="170dp"
            android:id="@+id/imagePhoto"
            android:scaleType="centerCrop"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:orientation="horizontal"
            android:weightSum="6"
            android:id="@+id/linearsubpadre"
            android:layout_below="@id/imagePhoto"
            android:background="@android:color/white"
            android:layout_marginBottom="3dp"
            >
            <ImageView
                android:layout_width="0dp"
                android:layout_weight="0.75"
                android:layout_height="match_parent"
                android:id="@+id/profilePic"
                android:scaleType="centerCrop"
                android:layout_margin="4dp"
                />
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="4.25"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:weightSum="2">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:id="@+id/username"
                    android:textStyle="bold"
                    android:gravity="center_vertical|start"
                    android:maxLines="1"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:id="@+id/place"
                    android:padding="1dp"
                    android:gravity="center_vertical|start"
                    android:maxLines="1"
                    />
            </LinearLayout>
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:gravity="top"
                android:singleLine="true"
                android:id="@+id/date"
                android:padding="1dp"
                />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/photoDescription"
            android:layout_below="@+id/linearsubpadre"
            android:gravity="start"
            />

        <LinearLayout
            android:layout_below="@+id/photoDescription"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:orientation="horizontal"
            android:weightSum="6"
            android:layout_marginTop="5dp"
            >
            <ImageView
                android:layout_width="0dp"
                android:layout_weight="0.7"
                android:layout_height="match_parent"
                android:src="@drawable/pinmap"
            />

            <TextView
                android:layout_width="0dp"
                android:layout_weight="5.25"
                android:layout_height="match_parent"
                android:id="@+id/botomPlace"
                android:text="Buenos Aires, Argentina"
                android:gravity="center_vertical"
                android:paddingLeft="3dp"
                />

        </LinearLayout>
    </RelativeLayout>
</ScrollView>